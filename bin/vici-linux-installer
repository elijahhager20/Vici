#!/bin/sh

set -e

chmod +x ./vici ./vicil

mkdir -p "$HOME/.local/bin"

cp ./vici ./vicil "$HOME/.local/bin/"

for file in "$HOME/.bashrc" "$HOME/.profile"; do
  if ! grep -qs 'export PATH=.*\.local/bin' "$file" 2>/dev/null; then
    echo 'export PATH="$HOME/.local/bin:$PATH"' >> "$file"
    echo "Updated $file to include ~/.local/bin in PATH"
  fi
done

echo "Installation complete. Reload your shell with 'source ~/.bashrc' or 'source ~/.profile'"
