{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "mingw64 g++",
            "command": "g++", // Change to your path to g++ if not in PATH
            "args": [
                "-std=c++23",
                "-static",
                "-fdiagnostics-color=always",
                "main.cpp",
                "init.cpp",
                "utils.cpp",
                "ver_ctrl.cpp",
                "-o",
                "${workspaceFolder}\\bin\\viciw.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task updated for static linking"
        }
    ]
}

// Linux command:
// g++ -std=c++23 -static -fdiagnostics-color=always main.cpp init.cpp utils.cpp ver_ctrl.cpp -o ./bin/vicil